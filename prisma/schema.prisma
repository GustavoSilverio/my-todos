generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id       Int    @id @default(autoincrement())
  name     String @unique
  password String
}

model Todo {
  id    Int     @id @default(autoincrement())
  title String
  done  Boolean @default(false)
}
